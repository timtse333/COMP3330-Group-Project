<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resmsgView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:id="@+id/resmsgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:padding="16dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/resmsg_user_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="10dp"
            android:src="@drawable/test"
            app:civ_border_color="@color/colorBackground"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/resmsg_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/resmsg_user_icon"
            android:layout_toRightOf="@id/resmsg_user_icon"
            android:text="username"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/resmsg_msgContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/resmsg_user_name"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/resmsg_user_icon"
            android:text="post content"
            android:textColor="#a9a9a9"
            android:textSize="18sp"></TextView>


    </RelativeLayout>
</androidx.cardview.widget.CardView>